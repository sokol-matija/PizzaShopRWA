@page
@model IndexModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="container fade-in">
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="mb-4">Dashboard</h2>
            <p>Welcome back, @HttpContext.Session.GetString("Username")!</p>
        </div>
    </div>
    
    <div class="row">
        <!-- Quick Stats -->
        <div class="col-md-3 mb-4">
            <div class="card">
                <div class="card-body text-center">
                    <i class='bx bx-cart text-primary' style="font-size: 2.5rem;"></i>
                    <h5 class="mt-2">Orders Today</h5>
                    <h3 class="text-primary">8</h3>
                </div>
            </div>
        </div>
        
        <div class="col-md-3 mb-4">
            <div class="card">
                <div class="card-body text-center">
                    <i class='bx bx-money text-primary' style="font-size: 2.5rem;"></i>
                    <h5 class="mt-2">Revenue</h5>
                    <h3 class="text-primary">$254.85</h3>
                </div>
            </div>
        </div>
        
        <div class="col-md-3 mb-4">
            <div class="card">
                <div class="card-body text-center">
                    <i class='bx bx-bowl-hot text-primary' style="font-size: 2.5rem;"></i>
                    <h5 class="mt-2">Popular Item</h5>
                    <h3 class="text-primary">Pepperoni</h3>
                </div>
            </div>
        </div>
        
        <div class="col-md-3 mb-4">
            <div class="card">
                <div class="card-body text-center">
                    <i class='bx bx-user text-primary' style="font-size: 2.5rem;"></i>
                    <h5 class="mt-2">Customers</h5>
                    <h3 class="text-primary">42</h3>
                </div>
            </div>
        </div>
    </div>
    
    <div class="row">
        <!-- Recent Orders -->
        <div class="col-md-8 mb-4">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Recent Orders</h5>
                    <a href="/Orders/Index" class="btn btn-sm btn-primary">View All</a>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Order #</th>
                                    <th>Customer</th>
                                    <th>Items</th>
                                    <th>Total</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>1023</td>
                                    <td>John D.</td>
                                    <td>Pepperoni (x2), Garlic Bread</td>
                                    <td>$24.99</td>
                                    <td><span class="badge bg-success">Delivered</span></td>
                                </tr>
                                <tr>
                                    <td>1022</td>
                                    <td>Maria S.</td>
                                    <td>Veggie Supreme, Wings</td>
                                    <td>$32.50</td>
                                    <td><span class="badge bg-warning">In Progress</span></td>
                                </tr>
                                <tr>
                                    <td>1021</td>
                                    <td>Robert P.</td>
                                    <td>Cheese (x3)</td>
                                    <td>$38.97</td>
                                    <td><span class="badge bg-info">Preparing</span></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Quick Actions -->
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Quick Actions</h5>
                </div>
                <div class="card-body">
                    <div class="list-group">
                        <a href="/Menu/Index" class="list-group-item list-group-item-action d-flex align-items-center">
                            <i class='bx bx-food-menu me-3 text-primary'></i>
                            View Menu
                        </a>
                        <a href="/Orders/New" class="list-group-item list-group-item-action d-flex align-items-center">
                            <i class='bx bx-plus-circle me-3 text-primary'></i>
                            Create New Order
                        </a>
                        <a href="/Inventory/Index" class="list-group-item list-group-item-action d-flex align-items-center">
                            <i class='bx bx-package me-3 text-primary'></i>
                            Check Inventory
                        </a>
                        <a href="/Settings/Index" class="list-group-item list-group-item-action d-flex align-items-center">
                            <i class='bx bx-cog me-3 text-primary'></i>
                            Settings
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Dashboard specific script can go here
        document.addEventListener('DOMContentLoaded', function() {
            console.log('Dashboard loaded');
        });
    </script>
}
