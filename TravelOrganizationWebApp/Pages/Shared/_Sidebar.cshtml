@{
    // Get current page path for active state
    var currentPath = Context.Request.Path.Value?.ToLower() ?? "";
}

<div class="sidebar">
    <div class="sidebar-header">
        <div class="logo">
            <i class='bx bx-store' style="color: #EA7C69; font-size: 28px;"></i>
        </div>
    </div>
    
    <div class="sidebar-content">
        <ul class="sidebar-nav">
            <li class="sidebar-item">
                <a class="sidebar-link @(currentPath == "/dashboard" || currentPath == "/" ? "active" : "")" asp-page="/Dashboard/Index" title="Dashboard">
                    <i class='bx bx-home-alt'></i>
                </a>
            </li>
            <li class="sidebar-item">
                <a class="sidebar-link @(currentPath.StartsWith("/dashboard/menu") ? "active" : "")" asp-page="/Dashboard/Menu" title="Menu">
                    <i class='bx bx-pie-chart-alt'></i>
                </a>
            </li>
            <li class="sidebar-item">
                <a class="sidebar-link @(currentPath.StartsWith("/dashboard/orders") ? "active" : "")" asp-page="/Dashboard/Orders" title="Orders">
                    <i class='bx bx-time'></i>
                </a>
            </li>
            <li class="sidebar-item">
                <a class="sidebar-link @(currentPath.StartsWith("/dashboard/notifications") ? "active" : "")" asp-page="/Dashboard/Notifications" title="Notifications">
                    <i class='bx bx-envelope'></i>
                </a>
            </li>
            <li class="sidebar-item">
                <a class="sidebar-link @(currentPath.StartsWith("/dashboard/alerts") ? "active" : "")" asp-page="/Dashboard/Alerts" title="Alerts">
                    <i class='bx bx-bell'></i>
                </a>
            </li>
            <li class="sidebar-item">
                <a class="sidebar-link @(currentPath.StartsWith("/dashboard/settings") ? "active" : "")" asp-page="/Dashboard/Settings" title="Settings">
                    <i class='bx bx-cog'></i>
                </a>
            </li>
        </ul>
    </div>
    
    <div class="sidebar-footer">
        <a class="sidebar-link" asp-page="/Account/Logout" title="Logout">
            <i class='bx bx-log-out'></i>
        </a>
    </div>
</div>

<!-- Mobile Menu Toggle -->
<div class="mobile-menu-toggle">
    <button id="sidebarToggle">
        <i class='bx bx-menu'></i>
    </button>
</div> 