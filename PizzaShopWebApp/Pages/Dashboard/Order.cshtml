</style>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const notification = document.getElementById('notification');
        const notificationMessage = notification.querySelector('.notification-message');
        const notificationClose = notification.querySelector('.notification-close');
        const cartCountBadge = document.querySelector('.cart-count-badge');
        const cartItems = document.querySelector('.cart-items');
        
        // Dynamic search with debounce
        const searchInput = document.getElementById('searchInput');
        let searchTimeout;
        
        searchInput.addEventListener('input', function() {
            clearTimeout(searchTimeout);
            searchTimeout = setTimeout(() => {
                performSearch();
            }, 300);
        });
        
        function performSearch() {
            const searchTerm = searchInput.value;
            const url = new URL(window.location.href);
            
            if (searchTerm) {
                url.searchParams.set('searchTerm', searchTerm);
            } else {
                url.searchParams.delete('searchTerm');
            }
            
            window.location.href = url.toString();
        }
        
        window.clearSearch = function() {
            searchInput.value = '';
            performSearch();
        };
        
        function showNotification(type, message) {
            notification.classList.remove('success', 'error', 'show');
            notification.classList.add(type);
            notificationMessage.textContent = message;
            
            // Get the elements
            const icon = notification.querySelector('.notification-icon');
            const checkmarkSvg = notification.querySelector('.checkmark-svg');
            
            // Reset animations and display
            icon.style.display = 'none';
            checkmarkSvg.style.display = 'none';
            
            // Set different icons based on type and message
            if (type === 'success') {
                // Use SVG checkmark for success notifications
                checkmarkSvg.style.display = 'block';
                
                // Reset SVG animation
                const circle = checkmarkSvg.querySelector('.checkmark-circle');
                const check = checkmarkSvg.querySelector('.checkmark-check');
                
                circle.style.animation = 'none';
                check.style.animation = 'none';
                
                // Force reflow
                void checkmarkSvg.offsetWidth;
                
                // Restart animations
                circle.style.animation = 'stroke 0.6s cubic-bezier(0.65, 0, 0.45, 1) forwards';
                check.style.animation = 'stroke 0.4s cubic-bezier(0.65, 0, 0.45, 1) 0.4s forwards';
                
                // Still set icon class for fallback
                if (message.toLowerCase().includes('added')) {
                    icon.className = 'notification-icon bx bx-dish';
                } else if (message.toLowerCase().includes('removed')) {
                    icon.className = 'notification-icon bx bx-basket';
                } else if (message.toLowerCase().includes('updated') || message.toLowerCase().includes('changed')) {
                    icon.className = 'notification-icon bx bx-food-menu';
                } else {
                    icon.className = 'notification-icon bx bx-check-circle';
                }
            } else {
                // Use boxicon for error
                icon.style.display = 'block';
                icon.className = 'notification-icon bx bx-error-circle';
            }
            
            // Force a reflow to restart animation
            notification.offsetHeight;
            
            // Add a slight delay for a better visual effect
            setTimeout(() => {
                notification.classList.add('show');
            }, 10);
            
            const hideTimeout = setTimeout(() => {
                hideNotification();
            }, 3000);
            
            notificationClose.onclick = function() {
                clearTimeout(hideTimeout);
                hideNotification();
            };
        }
        
        function hideNotification() {
            notification.classList.remove('show');
        }
        
        // Handle add to cart
        document.querySelectorAll('.add-to-cart-form').forEach(form => {
            form.addEventListener('submit', function(e) {
                e.preventDefault();
                const button = form.querySelector('.add-to-cart-btn');
                const icon = button.querySelector('i');
                const foodCard = form.closest('.food-card');
                
                // Force animation restart by removing and adding the class
                button.classList.remove('clicked');
                void button.offsetWidth; // Trigger reflow
                button.classList.add('clicked');
                
                // Remove the class after animation completes
                setTimeout(() => {
                    button.classList.remove('clicked');
                }, 600);
                
                button.disabled = true;
                
                fetch(form.action, {
                    method: 'POST',
                    body: new FormData(form)
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        // Update cart count
                        cartCountBadge.textContent = data.cartCount;
                        
                        // Update cart items
                        fetch(window.location.href)
                            .then(response => response.text())
                            .then(html => {
                                const parser = new DOMParser();
                                const doc = parser.parseFromString(html, 'text/html');
                                const newCartItems = doc.querySelector('.cart-items').innerHTML;
                                cartItems.innerHTML = newCartItems;
                                
                                // Update cart total
                                const newTotal = doc.querySelector('.summary-row.total span:last-child').textContent;
                                document.querySelector('.summary-row.total span:last-child').textContent = newTotal;
                            });
                        
                        // Animate the card
                        foodCard.classList.add('added-to-cart');
                        setTimeout(() => {
                            foodCard.classList.remove('added-to-cart');
                        }, 700);
                    }
                    
                    showNotification(data.success ? 'success' : 'error', data.message);
                })
                .catch(error => {
                    showNotification('error', 'An error occurred while adding to cart.');
                })
                .finally(() => {
                    button.disabled = false;
                });
            });
        });
        
        // Handle quantity updates and remove items
        cartItems.addEventListener('click', function(e) {
            const button = e.target.closest('button');
            if (!button) return;
            
            const form = button.closest('form');
            if (!form) return;
            
            e.preventDefault();
            
            fetch(form.action, {
                method: 'POST',
                body: new FormData(form)
            })
            .then(response => response.text())
            .then(html => {
                const parser = new DOMParser();
                const doc = parser.parseFromString(html, 'text/html');
                
                // Update cart items
                const newCartItems = doc.querySelector('.cart-items').innerHTML;
                cartItems.innerHTML = newCartItems;
                
                // Update cart count
                const newCount = doc.querySelector('.cart-count-badge').textContent;
                cartCountBadge.textContent = newCount;
                
                // Update cart total
                const newTotal = doc.querySelector('.summary-row.total span:last-child').textContent;
                document.querySelector('.summary-row.total span:last-child').textContent = newTotal;
            })
            .catch(error => {
                showNotification('error', 'An error occurred while updating cart.');
            });
        });
    });
</script>
