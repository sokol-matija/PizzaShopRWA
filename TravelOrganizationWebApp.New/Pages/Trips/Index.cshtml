@page
@model TravelOrganizationWebApp.Pages.Trips.IndexModel
@{
    ViewData["Title"] = "Available Trips";
}

<div class="container mt-4">
    <h1 class="mb-4">@ViewData["Title"]</h1>
    
    @if (!string.IsNullOrEmpty(TempData["SuccessMessage"]?.ToString()))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    
    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger" role="alert">
            @Model.ErrorMessage
        </div>
    }
    
    <!-- Destination Filter -->
    <div class="card mb-4">
        <div class="card-body">
            <h5 class="card-title">Filter Trips</h5>
            <form method="get" class="row g-3 align-items-end">
                <div class="col-md-6">
                    <label asp-for="DestinationId" class="form-label">Destination</label>
                    <select asp-for="DestinationId" asp-items="Model.Destinations" class="form-select">
                        <option value="">-- All Destinations --</option>
                    </select>
                </div>
                <div class="col-md-6">
                    <button type="submit" class="btn btn-primary">Apply Filter</button>
                    <a asp-page="./Index" class="btn btn-outline-secondary">Clear</a>
                </div>
            </form>
        </div>
    </div>
    
    <!-- Trip Listings -->
    @if (Model.Trips != null && Model.Trips.Any())
    {
        <div class="row row-cols-1 row-cols-md-3 g-4">
            @if (User.IsInRole("Admin"))
            {
                <div class="col">
                    <div class="card h-100 border-primary">
                        <div class="card-body text-center d-flex flex-column justify-content-center">
                            <h5 class="card-title">Add New Trip</h5>
                            <p class="card-text">Create a new trip for travelers</p>
                            <a asp-page="./Create" class="btn btn-primary mt-auto">Add Trip</a>
                        </div>
                    </div>
                </div>
            }
            
            @foreach (var trip in Model.Trips)
            {
                <div class="col">
                    <div class="card h-100">
                        @if (!string.IsNullOrEmpty(trip.ImageUrl))
                        {
                            <img src="@trip.ImageUrl" class="card-img-top" alt="@trip.Title" style="height: 200px; object-fit: cover;">
                        }
                        else
                        {
                            <!-- Static placeholder instead of dynamic Unsplash -->
                            <div class="card-img-top bg-light d-flex justify-content-center align-items-center" style="height: 200px;">
                                <div class="text-center">
                                    <i class="fas fa-plane-departure text-muted" style="font-size: 3rem;"></i>
                                    <p class="text-muted mb-0">No image available</p>
                                </div>
                            </div>
                        }
                        <div class="card-body">
                            <h5 class="card-title">@trip.Title</h5>
                            <h6 class="card-subtitle mb-2 text-muted">@trip.DestinationName</h6>
                            <p class="card-text">
                                @(trip.Description?.Length > 150 ? trip.Description.Substring(0, 150) + "..." : trip.Description)
                            </p>
                        </div>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">
                                <i class="fas fa-calendar"></i> 
                                @trip.StartDate.ToString("MMM d, yyyy") - @trip.EndDate.ToString("MMM d, yyyy")
                                <span class="badge bg-secondary float-end">@trip.DurationInDays days</span>
                            </li>
                            <li class="list-group-item">
                                <i class="fas fa-dollar-sign"></i> @trip.FormattedPrice
                            </li>
                            <li class="list-group-item">
                                <i class="fas fa-users"></i> 
                                @if (trip.AvailableSlots > 0)
                                {
                                    <span>@trip.AvailableSlots spots left</span>
                                    <span class="badge bg-success float-end">Available</span>
                                }
                                else
                                {
                                    <span>Fully booked</span>
                                    <span class="badge bg-danger float-end">Sold Out</span>
                                }
                            </li>
                        </ul>
                        <div class="card-body">
                            <div class="d-flex gap-2">
                                <a asp-page="./Details" asp-route-id="@trip.Id" class="btn btn-primary">
                                    <i class="fas fa-info-circle me-1"></i> Details
                                </a>
                                @if (User.Identity?.IsAuthenticated == true && trip.AvailableSlots > 0)
                                {
                                    <a asp-page="./Book" asp-route-id="@trip.Id" class="btn btn-success">
                                        <i class="fas fa-ticket-alt me-1"></i> Book
                                    </a>
                                }
                                @if (User.IsInRole("Admin"))
                                {
                                    <div class="ms-auto">
                                        <a asp-page="./Edit" asp-route-id="@trip.Id" class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <button type="button" class="btn btn-sm btn-outline-danger" onclick="confirmDelete(@trip.Id, '@trip.Title')">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info" role="alert">
            <i class="fas fa-info-circle me-2"></i> No trips found. Please try a different filter or check back later.
        </div>
    }
</div>

<!-- Delete Confirmation Modal -->
@if (User.IsInRole("Admin"))
{
    <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteModalLabel">Confirm Delete</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete <strong id="deleteTripName"></strong>?</p>
                    <p class="text-danger">This action cannot be undone and will cancel all existing bookings.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <form id="deleteForm" method="post" asp-page-handler="Delete">
                        <input type="hidden" id="deleteTripId" name="id" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    <script>
        // Auto-submit form when destination changes
        document.addEventListener('DOMContentLoaded', function () {
            const destinationSelect = document.getElementById('DestinationId');
            if (destinationSelect) {
                destinationSelect.addEventListener('change', function() {
                    this.form.submit();
                });
            }
        });
        
        // Delete confirmation
        function confirmDelete(id, name) {
            document.getElementById('deleteTripId').value = id;
            document.getElementById('deleteTripName').textContent = name;
            
            var deleteModal = new bootstrap.Modal(document.getElementById('deleteModal'));
            deleteModal.show();
        }
    </script>
} 