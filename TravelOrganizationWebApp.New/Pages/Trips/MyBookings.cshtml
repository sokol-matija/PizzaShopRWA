@page
@model TravelOrganizationWebApp.Pages.Trips.MyBookingsModel
@{
    ViewData["Title"] = "My Bookings";
}

<div class="container mt-4">
    <h1 class="mb-4">@ViewData["Title"]</h1>
    
    @if (!string.IsNullOrEmpty(TempData["SuccessMessage"]?.ToString()))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    
    @if (!string.IsNullOrEmpty(TempData["ErrorMessage"]?.ToString()))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    
    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger" role="alert">
            @Model.ErrorMessage
        </div>
    }

    @if (Model.Bookings.Any())
    {
        <div class="row row-cols-1 g-4">
            @foreach (var booking in Model.Bookings)
            {
                <div class="col">
                    <div class="card">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">
                                Booking #@booking.Id
                                <span class="badge @booking.StatusBadgeClass ms-2">@booking.Status</span>
                            </h5>
                            <span class="text-muted">Booked on @booking.RegistrationDate.ToString("MMM d, yyyy")</span>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-4">
                                    @if (booking.Trip != null)
                                    {
                                        <h5 class="card-title">@booking.Trip.Title</h5>
                                        <p class="text-muted mb-1">@booking.Trip.DestinationName</p>
                                        <p class="mb-1">
                                            <i class="fas fa-calendar me-2"></i>
                                            @booking.Trip.StartDate.ToString("MMM d, yyyy") - @booking.Trip.EndDate.ToString("MMM d, yyyy")
                                        </p>
                                        <p class="mb-0">
                                            <i class="fas fa-users me-2"></i>
                                            @booking.NumberOfParticipants participant(s)
                                        </p>
                                    }
                                    else
                                    {
                                        <h5 class="card-title">@(string.IsNullOrEmpty(booking.TripName) ? "Trip" : booking.TripName)</h5>
                                        @if (!string.IsNullOrEmpty(booking.DestinationName))
                                        {
                                            <p class="text-muted mb-1">@booking.DestinationName</p>
                                        }
                                        @if (booking.StartDate != default && booking.EndDate != default)
                                        {
                                            <p class="mb-1">
                                                <i class="fas fa-calendar me-2"></i>
                                                @booking.StartDate.ToString("MMM d, yyyy") - @booking.EndDate.ToString("MMM d, yyyy")
                                            </p>
                                        }
                                        <p class="mb-0">
                                            <i class="fas fa-users me-2"></i>
                                            @booking.NumberOfParticipants participant(s)
                                        </p>
                                    }
                                </div>
                                <div class="col-md-4">
                                    <h6 class="mb-2">Payment Details</h6>
                                    <p class="mb-1">Total Amount: <strong>@booking.TotalPrice.ToString("C")</strong></p>
                                </div>
                                <div class="col-md-4 text-md-end mt-3 mt-md-0">
                                    <a asp-page="./Details" asp-route-id="@booking.TripId" class="btn btn-primary">
                                        <i class="fas fa-info-circle me-1"></i> Trip Details
                                    </a>
                                    
                                    @if (booking.IsCancellable)
                                    {
                                        <button type="button" class="btn btn-danger" 
                                                onclick="confirmCancel(@booking.Id, '@(booking.Trip?.Title ?? booking.TripName ?? "this trip")')">
                                            <i class="fas fa-times-circle me-1"></i> Cancel Booking
                                        </button>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info" role="alert">
            <i class="fas fa-info-circle me-2"></i> You don't have any bookings yet. 
            <a asp-page="./Index" class="alert-link">Browse available trips</a> to book your next adventure.
        </div>
    }
</div>

<!-- Cancel Confirmation Modal -->
<div class="modal fade" id="cancelModal" tabindex="-1" aria-labelledby="cancelModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="cancelModalLabel">Confirm Cancellation</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to cancel your booking for <strong id="cancelTripName"></strong>?</p>
                <p class="text-danger">This action may be subject to cancellation fees depending on the timing.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Keep Booking</button>
                <form id="cancelForm" method="post" asp-page-handler="Cancel">
                    <input type="hidden" id="cancelBookingId" name="id" />
                    <button type="submit" class="btn btn-danger">Cancel Booking</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmCancel(id, name) {
            document.getElementById('cancelBookingId').value = id;
            document.getElementById('cancelTripName').textContent = name || 'this trip';
            
            var cancelModal = new bootstrap.Modal(document.getElementById('cancelModal'));
            cancelModal.show();
        }
    </script>
} 