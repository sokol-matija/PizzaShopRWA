<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Travel Organization System</title>
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- Our custom theme -->
    <link rel="stylesheet" href="~/css/travel-theme.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApp.styles.css" asp-append-version="true" />
    <link rel="icon" type="image/png" href="~/favicon.png" />
    <script src="https://cdn.jsdelivr.net/npm/unsplash-js@7.0.18/dist/unsplash-js.min.js"></script>
    <script src="~/js/unsplashService.js" asp-append-version="true"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-toggleable-lg navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand text-white" asp-area="" asp-page="/Index">Travel System</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-lg-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-page="/Destinations/Index">Destinations</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-page="/Trips/Index">Trips</a>
                        </li>
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-page="/Trips/MyBookings">My Bookings</a>
                            </li>
                        }
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-white" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Admin
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <li><a class="dropdown-item" asp-area="" asp-page="/Admin/Destinations/Index">Manage Destinations</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-page="/Admin/Trips/Index">Manage Trips</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-page="/Admin/Guides/Index">Manage Guides</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-page="/Admin/Bookings/Index">Manage Bookings</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-page="/Admin/Users/Index">Manage Users</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" asp-area="" asp-page="/Admin/Logs/Index">System Logs</a></li>
                                </ul>
                            </li>
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="modern-footer">
        <div class="footer-gradient">
            <div class="container">
                <div class="row gy-4">
                    <!-- Company Info Section -->
                    <div class="col-lg-4 col-md-6">
                        <div class="footer-brand">
                            <h5 class="footer-title">
                                <i class="fas fa-plane me-2"></i>
                                Travel System
                            </h5>
                            <p class="footer-description">
                                Your ultimate travel companion for discovering amazing destinations 
                                and creating unforgettable experiences around the world.
                            </p>
                            <div class="social-links">
                                <a href="#" class="social-link" title="Facebook">
                                    <i class="fab fa-facebook-f"></i>
                                </a>
                                <a href="#" class="social-link" title="Twitter">
                                    <i class="fab fa-twitter"></i>
                                </a>
                                <a href="#" class="social-link" title="Instagram">
                                    <i class="fab fa-instagram"></i>
                                </a>
                                <a href="#" class="social-link" title="LinkedIn">
                                    <i class="fab fa-linkedin-in"></i>
                                </a>
                            </div>
                        </div>
                    </div>

                    <!-- Quick Links Section -->
                    <div class="col-lg-2 col-md-6">
                        <h6 class="footer-section-title">Quick Links</h6>
                        <ul class="footer-links">
                            <li><a asp-area="" asp-page="/Index">Home</a></li>
                            <li><a asp-area="" asp-page="/Destinations/Index">Destinations</a></li>
                            <li><a asp-area="" asp-page="/Trips/Index">Trips</a></li>
                            @if (User.Identity?.IsAuthenticated == true)
                            {
                                <li><a asp-area="" asp-page="/Trips/MyBookings">My Bookings</a></li>
                            }
                        </ul>
                    </div>

                    <!-- Support Section -->
                    <div class="col-lg-3 col-md-6">
                        <h6 class="footer-section-title">Support</h6>
                        <ul class="footer-links">
                            <li><a asp-area="" asp-page="/Privacy">Privacy Policy</a></li>
                            <li><a href="#" data-bs-toggle="modal" data-bs-target="#termsModal">Terms of Service</a></li>
                            <li><a href="#" data-bs-toggle="modal" data-bs-target="#contactModal">Contact Us</a></li>
                            <li><a href="#" data-bs-toggle="modal" data-bs-target="#helpModal">Help Center</a></li>
                        </ul>
                    </div>

                    <!-- Newsletter Section -->
                    <div class="col-lg-3 col-md-6">
                        <h6 class="footer-section-title">Stay Updated</h6>
                        <p class="newsletter-text">
                            Subscribe to get the latest travel deals and destination updates.
                        </p>
                        <div class="newsletter-form">
                            <div class="input-group">
                                <input type="email" class="form-control newsletter-input" 
                                       id="newsletterEmail" placeholder="Enter your email" aria-label="Email">
                                <button class="btn btn-newsletter" type="button" onclick="subscribeNewsletter()">
                                    <i class="fas fa-paper-plane"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Footer Bottom -->
                <hr class="footer-divider">
                <div class="row align-items-center">
                    <div class="col-md-8">
                        <div class="footer-copyright">
                            <i class="fas fa-copyright me-1"></i>
                            2025 RWA - Travel Organization System. 
                            <span class="text-accent">Developed by Matija Sokol</span>
                        </div>
                    </div>
                    <div class="col-md-4 text-md-end">
                        <div class="footer-badges">
                            <span class="badge-secure">
                                <i class="fas fa-lock me-1"></i>
                                Secure
                            </span>
                            <span class="badge-trusted">
                                <i class="fas fa-shield-alt me-1"></i>
                                Trusted
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <!-- Newsletter Thank You Modal -->
    <div class="modal fade" id="newsletterModal" tabindex="-1" aria-labelledby="newsletterModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content newsletter-modal">
                <div class="modal-header border-0">
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body text-center p-4">
                    <div class="newsletter-success-icon">
                        <i class="fas fa-check-circle"></i>
                    </div>
                    <h4 class="newsletter-success-title">Thank You for Your Interest!</h4>
                    <p class="newsletter-success-message">
                        We appreciate your subscription to our newsletter. We'll send you the latest travel deals, 
                        destination updates, and exclusive offers when we publish our first newsletter.
                    </p>
                    <p class="newsletter-success-note">
                        <i class="fas fa-info-circle me-2"></i>
                        Stay tuned for amazing travel opportunities!
                    </p>
                    <button type="button" class="btn btn-primary btn-animated" data-bs-dismiss="modal">
                        <i class="fas fa-thumbs-up me-2"></i>Got it!
                    </button>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @* Hot reload browser refresh script for development *@
    @if (Environment.GetEnvironmentVariable("__ASPNETCORE_BROWSER_TOOLS") is not null)
    {
        <script src="/_framework/aspnetcore-browser-refresh.js"></script>
    }

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>